<MyGrid>
    GridLayout:
        cols: 1
        size: root.width, root.height
        
        Image:
            source: './images/logo.png'
            size_hint_x: 1
            size_hint_y: .25
            keep_ratio: True

        GridLayout:
            cols: 2
            size_hint_x: 1
            size_hint_y: .1
            
            Label:
                text: "Score:"
                font_size: root.width * 0.05
                color: (1, 1, 1, 1)
                size_hint_x: .5
                size_hint_y: .6

            Label:
                text: "Highscore:"
                font_size: root.width * 0.05
                color: (1, 1, 1, 1)
                size_hint_x: .5
                size_hint_y: .6

            Label:
                id: label_score
                text: root.label_score
                font_size: root.width * 0.07
                color: (1, 1, 1, 1)
                size_hint_x: .5
                size_hint_y: .4

            Label:
                id: label_highscore
                text: root.label_highscore
                font_size: root.width * 0.07
                color: (1, 1, 1, 1)
                size_hint_x: .5
                size_hint_y: .4

        GridLayout:
            cols: 1
<P>:
    Label:
        text: "Tap the game board to restart"
        font_size: root.width * 0.07
        size_hint: 0.6, 0.2
        pos_hint: {"x": 0.2, "top": 0.7}
